// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  accountId Int
  account   Accounts @relation(fields: [accountId], references: [id])
}

model Accounts {
  id               Int            @id @default(autoincrement())
  balance          Int
  Users            Users[]
  debitedAccounts  Transactions[] @relation("debitedAccount")
  creditedAccounts Transactions[] @relation("creditedAccount")
}

model Transactions {
  id                Int      @id @default(autoincrement())
  debitedAccountId  Int
  creditedAccountId Int
  value             Int
  createdAt         DateTime @default(now())
  debitedAccount    Accounts @relation("debitedAccount", fields: [debitedAccountId], references: [id])
  creditedAccount   Accounts @relation("creditedAccount", fields: [creditedAccountId], references: [id])
}
